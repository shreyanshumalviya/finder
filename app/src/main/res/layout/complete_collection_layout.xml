<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:ignore="HardcodedText"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/frame_for_Item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All Items Collected. Submit it at counter or forward to delivery man. \n press Rechek to recheck or Continue to continue" />
    </LinearLayout>
    <Button
        android:id="@+id/ccl_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="Cancel"
        android:layout_below="@id/frame_for_Item"/>

    <Button
        android:id="@+id/ccl_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="Confirm"
        android:layout_below="@id/frame_for_Item"/>


</RelativeLayout>